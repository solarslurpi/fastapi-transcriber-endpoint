{
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "pylint.importStrategy": "fromEnvironment",
  "pylint.args": [
    "--disable=C0103", // invalid name (e.g.: not conforming to snake_case naming and such)
    "--disable=C0111",
    "--disable=C0115",
    "--disable=W0621", //redefined-outer-name
    "--disable=W1203", //logging-fstring-interpolation
    "--max-line-length=120",
    "--rcfile=.pylintrc",
    "--ignore=archive",
    "--ignore=test"
  ],
  "restructuredtext.linter.run": "onSave",
  "editor.defaultFormatter": "ms-python.pylint",
  "files.trimTrailingWhitespace": true,
  "python.testing.pytestArgs": ["tests"]
}
